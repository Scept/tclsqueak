IDE::System proc createTTKCloseButtonStyle {} {
    if {"smallclose" in [ttk::style element names]} return
    if {[catch {ttk::style element create smallclose vsapi WINDOW 19 {disabled 4 pressed 3 active 2 {} 1}}]} {
        image create photo img_close -data {}
        image create photo img_close_pressed -data {}
        image create photo img_close_active -data {}
        ttk::style element create smallclose image [list img_close {active pressed !disabled} img_close_pressed {active !disabled} img_close_active]
    }
    ttk::style layout CloseButton {CloseButton.smallclose -sticky news}
}
